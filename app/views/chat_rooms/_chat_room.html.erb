<div id="room-<%= chat_room.id %>" class="chat-room hidden">

  <div class="row">
  	<div class="col-lg-12">
  		<h1 class="page-header" id="room-name"><%= chat_room.name %></h1>
  	</div>
  </div>

  <div class="row col-md-8 col-md-offset-2">

    <div class="panel panel-default">
        <div class="panel-body" id="chat-messages"></div>
    </div>

    <div id="message-form">
      <input type="text" id="chat-send-content">
      <input type="button" id="send" class="btn-primary" value="Send">
    </div>
  </div>

</div>

<script>
  var roomId = <%= chat_room.id %>;
  var name = "<%= current_user.username %>";
  setupRoom(roomId, name);
</script>