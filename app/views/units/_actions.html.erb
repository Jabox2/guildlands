<%= simple_form_for @unit, url: unit_path(@unit), method: :patch do |f| %>
	<% if @activities == nil %>
		<%= f.input :activity_id, collection: Activity.all %>
	<% else %>
		<%= f.input :activity_id, collection: @activities %>
	<% end %>

	<%= f.button :submit, "Set Action", class: 'btn-primary' %>
<% end %>