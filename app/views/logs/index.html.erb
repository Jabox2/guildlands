<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Turn Log</h1>
	</div>
</div>

<div class='row'>
	<div class='col-lg-12'>
		<h3><strong>Logs</strong></h3>
		
		<table class="table table-bordered table-hover table-striped">
	        <thead>
	            <tr>
	                <th>Turn</th>
	                <th>Message</th>
	            </tr>
            </thead>

            <tbody>
    		<% @logs.each do |log| %>
                <tr>
                    <td><%= log.turn %></td>
                    <td><%= log.message %></td>
                </tr>
			<% end %>      
            </tbody>
        </table>
	</div>
</div>